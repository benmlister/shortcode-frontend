@{
    ViewData["Title"] = "Home Page";
}
<div class="bg-gradient bg-primary">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-6">
                <h1 class="display-2 text-light">Shortcode</h1>
                <p class="lead text-light">Say goodbye to clunky URLs and hello to an enhanced online experience with our URL shortening service.</p>
                <div class="row row-cols-auto align-items-center">
                    <div class="col">
                        <a class="btn btn-light btn-md" asp-action="Register" asp-controller="Authentication">Get started</a>
                    </div>
                    <div class="col">
                        <a class="text-light" asp-action="Login" asp-controller="Authentication">Already have an account?</a>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>

